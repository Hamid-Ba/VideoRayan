@using IranCafe.Application.Contract.AccountAgg
@model LoginOperatorDto
@{
    Layout = "_AdminLoginLayout";
    ViewData["Title"] = "ورود به ادمین";
}

<div class="wrapper-page">
    <div class="panel panel-color panel-primary panel-pages">
        <div class="panel-heading bg-img">
            <div class="bg-overlay"></div>
            <h3 class="text-center m-t-10 text-white"> صفحه ورود به  <strong>مدیریت</strong> </h3>
        </div>


        <div class="panel-body">
            <form class="form-horizontal m-t-20" asp-controller="Account" asp-action="Login" method="post">

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control input-lg " asp-for="Mobile" type="text" required="" placeholder="شماره موبایل">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control input-lg" asp-for="Password" type="password" required="" placeholder="رمز عبور">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg w-lg waves-effect waves-light" type="submit">ورود</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>