@using VideoRayan.Application.Contract.CustomerAgg
@model SendSmsCustomerDto

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ارسال پیام به مشتری</h4>
</div>

<form asp-controller="Customer" asp-action="SendMessage"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Message" class="control-label">پیام</label>
                    <textarea class="form-control" asp-for="Message"></textarea>
                    <span asp-validation-for="Message" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ارسال پیام</button>
    </div>
</form>